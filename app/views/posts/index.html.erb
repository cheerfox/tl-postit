<%= render 'shared/content_title', title: 'All Posts' %>
<% @posts.each do |post| %>
  <div class="row">
    <div class="span8 well">
      <%= render post.categories %>
      <h4><%= link_to post.title, post.url %></h4>
      <p><%= post.description %></p>
      <p>
        <span class="quiet"> post_by </span> <%= post.creator.username %>
        <small>create at <%= post.created_at %></small>
      </p>
      <span> <%= link_to "#{post.comments.size} comments", post_path(post) %> </span>
    </div>
  </div>
<% end %>
