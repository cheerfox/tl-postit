<%= render 'shared/errors', object: @post %>
<div class="well">
  <%= form_for @post do |f| %>
    <div class="control-group">
      <%= f.label :title %>
      <%= f.text_field :title %>
    </div>
    <div class="control-group">
      <%= f.label :url %>
      <%= f.text_field :url %>
    </div>
    <div class="control-group">
      <%= f.label :description %>
      <%= f.text_area :description, rows: 5 %>
    </div>
    <%= f.collection_check_boxes :category_ids, Category.all, :id, :name do |b| %>
      <%  b.label(class: 'checkbox inline') { b.check_box(class: 'checkbox') + b.text } %>
    <% end %>
    <hr>
   <br>
    <%= f.submit class: 'btn btn-primary'%>
  <% end %>
</div>